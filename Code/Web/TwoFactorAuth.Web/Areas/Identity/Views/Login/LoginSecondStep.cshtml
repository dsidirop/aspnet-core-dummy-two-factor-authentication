@model TwoFactorAuth.Web.ViewModels.Login.LoginSecondStepViewModel

@{ ViewData["Title"] = "Final Login Step"; }

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Guess the 2nd password</h4>
                <hr>

                <div class="form-group">
                    <img src="@($"{Model.PasswordHintImagePath}?v=123")" alt="Hint-Image" loading="lazy"/>

                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new {@class = @"form-control", autofocus = "autofocus"})

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button id="LoginSubmit" type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </section>
    </div>
</div>